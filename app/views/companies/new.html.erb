<div class="row text-center">
  <h3>Company create</h3>
</div>
<br>
<br>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
  	<%= form_for @company, method: :post do |f| %>

  		<div class="form-group">
  			<%= f.text_field :name, class: "form-control", placeholder: "Company name" %>
  			<%= f.hidden_field :user_id, value: current_user.id %>
  		</div>

  		<div class="form-group">
  			<%= f.text_area :description, class: "form-control", placeholder: "Company description" %>
  		</div>
  		<div class="form-group">
  			<%= f.text_field :location, class: "form-control", placeholder: "Location" %>
  		</div>
  		<div class="form-group">
  			<%= f.text_field :emp_count, class: "form-control", placeholder: "Ex: 5-20. 50-100" %>
  		</div>
  		<div class="form-group">
  			<%= f.submit :submit, class: "btn btn-primary" %>
  		</div>

  	<% end %>
  </div>
</div>
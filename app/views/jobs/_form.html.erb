
    <%= form_with(model: job, local: true) do |form| %>

      <div class="form-group">
        <%= form.text_field :title, class: "form-control", placeholder: "Job Title" %>
      </div>

      <div class="form-group">
        <%= form.text_area :description, class: "form-control", placeholder: "Job Description" %>
      </div>

      <div class="form-group">
        <%= form.text_field :location, class: "form-control", placeholder: "Job Location" %>
      </div>

      <div class="form-group">
        <%= form.text_field :salary, class: "form-control", placeholder: "Salary Ex: 5LPA , 10LPA ... etc" %>
      </div>

      <div class="form-group">
        <%= form.text_field :skills, class: "form-control", placeholder: "Skills ex: c, c++, java ... etc" %>
      </div>

      <div class="form-group">
        <%= form.submit :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
